<div class="table-responsive table_zahnschema">
  <table class="table table-bordered table-sm p-0 m-0 text-center">
    <tbody>
      <!-- Oberhalb: ZÃ¤hne 18-28 -->
      
      <!-- Therapieplanung (TP) - Oberhalb -->
      <tr class="plan_t">
        <td>TP</td>
        {% for zahn in [18, 17, 16, 15, 14, 13, 12, 11, 21, 22, 23, 24, 25, 26, 27, 28] %}
          {% set zahn_data = zahnschema_data | filter(v => v.zahn == zahn) | first %}
